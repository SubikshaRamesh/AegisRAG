# AegisRAG Production Configuration
# Copy this file to .env and modify as needed

# ============ SERVER ============
AEGIS_HOST=0.0.0.0
AEGIS_PORT=8000
AEGIS_DEBUG=false
AEGIS_LOG_LEVEL=INFO

# ============ STORAGE & PATHS ============
AEGIS_WORKSPACE=./workspaces/default
AEGIS_DATA_PATH=./data
AEGIS_MODELS_PATH=./models
LOG_FILE_PATH=./logs/aegisrag.log

# ============ DATABASE ============
# (Automatically set based on AEGIS_WORKSPACE)

# ============ MODELS ============
TEXT_EMBEDDER_MODEL=sentence-transformers/all-MiniLM-L6-v2
CLIP_MODEL=ViT-B-16
CLIP_PRETRAINED=openai

# ============ LLM INFERENCE ============
LLM_CONTEXT_SIZE=2048
LLM_THREADS=12
LLM_MAX_TOKENS=120
LLM_TEMPERATURE=0.0

# ============ RETRIEVAL ============
RETRIEVAL_TOP_K=3
FAISS_DISTANCE_THRESHOLD=1.0

# ============ INGESTION ============
MAX_UPLOAD_SIZE_MB=500

# ============ API ============
API_TIMEOUT_SECONDS=120
QUERY_TIMEOUT_SECONDS=30
INGEST_TIMEOUT_SECONDS=300
